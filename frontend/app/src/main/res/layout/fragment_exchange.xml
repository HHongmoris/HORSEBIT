<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ExchangeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/lih_BackBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/lih_ExBack"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:background="@drawable/exchang_background"
            android:hapticFeedbackEnabled="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    보유 KRW"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_MyKrw"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="122,334"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hsv_ExchangeTableItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lih_Bar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ExchangeTable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/lih_Bar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:background="@color/order_back_blue"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lih_BackBack">

        <TextView
            android:id="@+id/tv_ExOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="체결시간"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExCoinName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="코인명"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_EX_Type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="종류"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExSeep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거래수량"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거래단가"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거래금액"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExFee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="수수료"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExRealMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="정산금액"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ExOrderTime2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="주문시간"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/order_back_blue"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>