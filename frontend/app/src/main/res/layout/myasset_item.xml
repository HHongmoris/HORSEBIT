<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llv_MyAsset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llh_MyAsset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/llv_MyAssetItem"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_shape_mycolor_ractangle"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/llh_MyAssetItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_InformationHorseImg"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        android:elevation="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_face_24" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_MyAssetCoinTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/line_seed_kr_bd"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:paddingRight="3dp"
                                android:text="코인제목"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                            <TextView
                                android:id="@+id/tv_MyAssetCoinName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/line_seed_kr_rg"
                                android:gravity="center_vertical"
                                android:text="왜저래"
                                android:textColor="@color/black"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="60"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_MyAssetValueTitle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:fontFamily="@font/line_seed_kr_bd"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="평가손익"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_MyAssetValue"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:fontFamily="@font/line_seed_kr_rg"
                                android:gravity="center|center_vertical"
                                android:text="하이"
                                android:textColor="@color/blue" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="60"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_MyAssetRateTitle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:fontFamily="@font/line_seed_kr_bd"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="수익률"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_MyAssetRate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:fontFamily="@font/line_seed_kr_rg"
                                android:gravity="center|center_vertical"
                                android:text="안ㅇㄴㅇ"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
