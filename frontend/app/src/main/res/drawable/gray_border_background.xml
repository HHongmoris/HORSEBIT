<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 왼쪽 테두리 -->
    <item>
        <shape>
            <solid android:color= "@color/gray" />
            <corners android:radius="0dp" /> <!-- 모서리 반경을 0으로 설정 (각이 없는 직사각형) -->
        </shape>
    </item>
    <!-- 오른쪽 테두리 -->
    <item android:right="1dp"
        android:left="1dp"> <!-- 오른쪽 테두리를 1dp로 설정 -->
        <shape>
            <solid android:color="@color/white" /> <!-- 배경색을 회색으로 설정 -->
            <corners android:radius="0dp" /> <!-- 모서리 반경을 0으로 설정 (각이 없는 직사각형) -->
        </shape>
    </item>
</layer-list>
